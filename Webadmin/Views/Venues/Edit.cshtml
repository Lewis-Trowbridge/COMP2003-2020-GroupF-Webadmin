@model Webadmin.Models.Venues

@{
    ViewData["Title"] = "Edit";
    int venueId = ViewBag.venueId;
}

<h1>Edit</h1>

<h4>Venues</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="VenueName" class="control-label"></label>
                <input asp-for="VenueName" class="form-control" />
                <span asp-validation-for="VenueName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VenuePostcode" class="control-label"></label>
                <input asp-for="VenuePostcode" class="form-control" />
                <span asp-validation-for="VenuePostcode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AddLineOne" class="control-label"></label>
                <input asp-for="AddLineOne" class="form-control" />
                <span asp-validation-for="AddLineOne" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AddLineTwo" class="control-label"></label>
                <input asp-for="AddLineTwo" class="form-control" />
                <span asp-validation-for="AddLineTwo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="County" class="control-label"></label>
                <input asp-for="County" class="form-control" />
                <span asp-validation-for="County" class="text-danger"></span>
            </div>
            <div class=" form-group">
                <input value="@venueId" name="venueId">
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
