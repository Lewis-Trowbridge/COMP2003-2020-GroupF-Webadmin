@model Webadmin.Models.VenueTables

@{
    ViewData["Title"] = "Delete";
    int VenueId = ViewBag.venueId;
}
<div class="borderBody">
    <div class="titleMargin">
        <h1>Delete</h1>
        <div class="shareLine">
            <h3>Are you sure you want to delete this?</h3>
            <a asp-action="Index" asp-route-venueId="@VenueId" class="btn bntMedium">Back</a>
        </div>
        <hr />
    </div>
    <div>
        <h4>VenueTables</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Table Number
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.VenueTableNum)
            </dd>
            <dt class="col-sm-2">
                Capacity
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.VenueTableCapacity)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Venue)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Venue.AddLineOne)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="VenueTableId" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
        </form>
    </div>
</div>

