@model IEnumerable<Webadmin.Models.Bookings>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BookingTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookingSize)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BookingTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookingSize)
            </td>
            <td>
                <form asp-action="Attended">
                    <input name="bookingId" value="@item.BookingId" hidden />
                    <button type="submit" class="btn bntMedium" asp-action="Attended">Attended</button>
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
