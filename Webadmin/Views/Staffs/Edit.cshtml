            <div class="form-group">
                <label asp-for="StaffName" class="control-label"></label>
                <input asp-for="StaffName" class="form-control" />
                <span asp-validation-for="StaffName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StaffContactNum" class="control-label"></label>
                <input asp-for="StaffContactNum" class="form-control" />
                <span asp-validation-for="StaffContactNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StaffPositionId" class="control-label"></label>
                <select asp-for="StaffPositionId" class="form-control" asp-items="ViewBag.StaffPositionId"></select>
                <span asp-validation-for="StaffPositionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

